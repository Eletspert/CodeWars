Console.WriteLine("Escribe algo w: ");
string input  = Console.ReadLine();


string EncryptThis (string input)
{
    int result= 0;
    string resultString = null;
    string[] array = input.Split(' ');
    for (int i = 0;i < input.Length;i++)
    {
        if (i == 0)
        {
            result = Convert.ToInt32(input[i]);
        }
        else if (i == 1)
        {
            resultString += input[input.Length-1];
        }
        else if ( i == input.Length-1)
        {
            
            resultString += input[1];
        }
        else
        {
            resultString += input[i];
        }

        
    }
    
    return $"{result}{resultString}";
}

string resultado = EncryptThis (input);
Console.WriteLine(resultado);
